<?xml version='1.0' encoding='utf-8'?>
<widget id="com.quickprediction" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Quick Predictions</name>
    <description>Astrology software to create Horoscope, Check Marriage Matching, Jamakkol and much more astrological services.</description>
    <author email="hello@quickpredictions.com" href="https://www.quickpredictions.com">
        Quick Predictions team.
    </author>
    <content src="https://www.quickpredictions.com" />
	<access origin="*" />
	<allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
	<platform name="android">
		<icon src="icon/android/ldpi.png" density="ldpi" />
        <icon src="icon/android/mdpi.png" density="mdpi" />
        <icon src="icon/android/hdpi.png" density="hdpi" />
        <icon src="icon/android/xhdpi.png" density="xhdpi" />
        <icon src="icon/android/xxhdpi.png" density="xxhdpi" />
        <icon src="icon/android/xxxhdpi.png" density="xxxhdpi" />
		<preference name="Fullscreen" value="true" />
		<preference name="BackgroundColor" value="#FFFFFF"/>
		<preference name="SplashMaintainAspectRatio" value="true"/>
		<preference name="AndroidWindowSplashScreenBackground" value="#FFFFFF" />
		<preference name="AndroidWindowSplashScreenAnimatedIcon" value="splash/android/splash-square.png" />
		<preference name="ShowSplashScreen" value="true"/>
		<preference name="SplashScreenDelay" value="2000" />
		<preference name="FadeSplashScreenDuration" value="1000"/>
		<preference name="AutoHideSplashScreen" value="true" />
		<preference name="FadeSplashScreen" value="true" />
		<splash density="port-ldpi" src="splash/android/splash-port-ldpi.png"/>
		<splash density="port-mdpi" src="splash/android/splash-port-mdpi.png"/>
		<splash density="port-hdpi" src="splash/android/splash-port-hdpi.png"/>
		<splash density="port-xhdpi" src="splash/android/splash-port-xhdpi.png"/>
		<splash density="port-xxhdpi" src="splash/android/splash-port-xxhdpi.png"/>
		<splash density="port-xxxhdpi" src="splash/android/splash-port-xxxhdpi.png"/>
		<preference name="android-targetSdkVersion" value="33" />
		<config-file parent="/manifest" target="AndroidManifest.xml" xmlns:android="http://schemas.android.com/apk/res/android">
			<uses-permission android:name="android.permission.INTERNET"/>
            <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
		</config-file>
	</platform>
	<platform name="ios">
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="icon/ios/icon-60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="icon/ios/icon-60.png" width="60" height="60" />
        <icon src="icon/ios/icon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="icon/ios/icon-76.png" width="76" height="76" />
        <icon src="icon/ios/icon-76@2x.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="icon/ios/icon-40.png" width="40" height="40" />
        <icon src="icon/ios/icon-40@2x.png" width="80" height="80" />
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="icon/ios/icon.png" width="57" height="57" />
        <icon src="res/ios/icon@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="icon/ios/icon-72.png" width="72" height="72" />
        <icon src="icon/ios/icon-72@2x.png" width="144" height="144" />
        <!-- iPad Pro -->
        <icon src="icon/ios/icon-167.png" width="167" height="167" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="icon/ios/icon-small.png" width="29" height="29" />
        <icon src="icon/ios/icon-small@2x.png" width="58" height="58" />
        <icon src="icon/ios/icon-small@3x.png" width="87" height="87" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="icon/ios/icon-50.png" width="50" height="50" />
        <icon src="icon/ios/icon-50@2x.png" width="100" height="100" />
        <!-- iTunes Marketing Image -->
        <icon src="icon/ios/icon-1024.png" width="1024" height="1024" />
		<splash src="splash/ios/Default@2x~iphone~anyany.png"/>
		<splash src="splash/ios/Default@2x~iphone~comany.png"/>
		<splash src="splash/ios/Default@3x~iphone~anyany.png"/>
		<splash src="splash/ios/Default@3x~iphone~comany.png"/>
		<splash src="splash/ios/Default@2x~ipad~anyany.png"/>
		<splash src="splash/ios/Default@2x~ipad~comany.png"/>
    </platform>
</widget>
